# find ./Carthage/Checkouts/aws-sdk-ios/AWSAuthSDK/AWSAuthSDK.xcodeproj/xcshareddata/xcschemes ! -name "AWSAuthCore.xcscheme" -delete
# carthage build --platform iOS --no-use-binaries --cache-builds
